<form method="post" action="{{ path('activity_group_delete', {'id': activity_group.id}) }}" onsubmit="return confirm('Merci de confirmer la suppression du groupe {{ activity_group.name }}.');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activity_group.id) }}">
    <button class="btn btn-block btn-sm btn-danger">Supprimer</button>
</form>