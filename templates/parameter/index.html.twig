{% extends 'base.html.twig' %}
{% block title %}{{ titleConfiguration }}{% endblock %}

{% block body %}
    <div class="container panel-group">
        <div class="row col-md-12panel panel-heading">
            <div class="row col-md-12 text-center">
                <h2 class="">{{ titleGlobal }}</h2>
            </div>
            <div class="row col-md-2">
                <a href="{{ path('parameter_new') }}" class="btn btn-block btn-sm btn-success">Ajouter un paramètre</a>
            </div>
        </div>
        <div class="row col-md-12 panel panel-body">
            <table id = "headerList" class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th>Clé</th>
                    <th>Valeur</th>
                </tr>
                </thead>
                <tbody>
                {% for parameter in parameters%}
                    <tr>
                        <td><a href="{{ path('parameter_edit', {'id': parameter.id}) }}">{{ parameter.paramKey}}</a></td>
                        <td><a href="{{ path('parameter_edit', {'id': parameter.id}) }}">{{ parameter.paramValue}}</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun paramètre défini</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}