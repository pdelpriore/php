{% extends 'base.html.twig' %}
{% block title %}{{ titleConfiguration }}{% endblock %}

{% block body %}
    <div class="container panel-group">
        <div class="row col-md-12panel panel-heading">
            <div class="row col-md-12 text-center">
                <h2 class="">{{ titleProfil }}</h2>
            </div>
            <div class="row col-md-2">
                <a href="{{ path('profil_new') }}" class="btn btn-block btn-sm btn-success">Ajouter un profil</a>
            </div>
        </div>
        <div class="row col-md-12 panel panel-body">
            <table id = "headerList" class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th>Profil par défaut</th>
                    <th>Intitulé</th>
                    <th>Taux journalier</th>
                </tr>
                </thead>
                <tbody>
                {% for profil in profils %}
                    <tr>
                        <td><a href="{{ path('profil_edit', {'id': profil.id}) }}">{{ profil.defaultSelected ? "OUI" : ""}}</a></td>
                        <td><a href="{{ path('profil_edit', {'id': profil.id}) }}">{{ profil.name }}</a></td>
                        <td class="totalPrice"><a href="{{ path('profil_edit', {'id': profil.id}) }}">{{ profil.daylyCost|number_format(2, ',', '.') }} €</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun profil défini</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}