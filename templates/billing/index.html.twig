{% extends 'base.html.twig' %}
{% block title %}{{ titleConfiguration }}{% endblock %}

{% block body %}
    <div class="container panel-group">
        <div class="row col-md-12panel panel-heading">
            <div class="row col-md-12 text-center">
                <h2 class="">{{ titleBilling }}</h2>
            </div>
            <div class="row col-md-2">
                <a href="{{ path('billing_new') }}" class="btn btn-block btn-sm btn-success">Ajouter un type</a>
            </div>
        </div>
        <div class="row col-md-12 panel panel-body">
            <table id = "headerList" class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Pondération</th>
                    <th>Facturation par default</th>
                </tr>
                </thead>
                <tbody>
                {% for billing in billings%}
                    <tr>
                        <td><a href="{{ path('billing_edit', {'id': billing.id}) }}">{{ billing.name}}</a></td>
                        <td><a href="{{ path('billing_edit', {'id': billing.id}) }}">{{ billing.alias}}</a></td>
                        <td><a href="{{ path('billing_edit', {'id': billing.id}) }}">{{ billing.billDefault ? "OUI" : ''}}</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun type de facturation n'est défini</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}