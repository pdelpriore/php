{% extends 'base.html.twig' %}
{% block title %}{{ titleConfiguration }}{% endblock %}

{% block body %}
    <div class="container panel-group">
        <div class="row col-md-12panel panel-heading">
            <div class="row col-md-12 text-center">
                <h2 class="">{{ titleCyllenePerson }}</h2>
            </div>
            <div class="row col-md-2">
                <a href="{{ path('cyllene_person_new') }}" class="btn btn-block btn-sm btn-success">Ajouter un chiffreur</a>
            </div>
        </div>
        <div class="row col-md-12 panel panel-body">
            <table id = "headerList" class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th>Nom</th>
                </tr>
                </thead>
                <tbody>
                {% for cyllene_person in cyllene_people%}
                    <tr>
                        <td><a href="{{ path('cyllene_person_edit', {'id': cyllene_person.id}) }}">{{ cyllene_person.name}}</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun chiffreur d√©fini</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}