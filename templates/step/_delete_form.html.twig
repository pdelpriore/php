<form method="post" action="{{ path('step_delete', {'id': step.id}) }}" onsubmit="return confirm('Merci de confirmer la suppression du statut {{ step.name }}.');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ step.id) }}">
    <button class="btn btn-block btn-sm btn-danger">Supprimer</button>
</form>