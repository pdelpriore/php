{% extends 'base.html.twig' %}
{% block title %}{{ titleConfiguration }}{% endblock %}

{% block body %}
    <div class="container panel-group">
        <div class="row col-md-12panel panel-heading">
            <div class="row col-md-12 text-center">
                <h2 class="">{{ titleStep }}</h2>
            </div>
            <div class="row col-md-2">
                <a href="{{ path('step_new') }}" class="btn btn-block btn-sm btn-success">Ajouter une étape</a>
            </div>
        </div>
        <div class="row col-md-12 panel panel-body">
            <table id = "headerList" class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th>N° d'ordre</th>
                    <th>Intitulé</th>
                    <th>Étape par défaut</th>
                </tr>
                </thead>
                <tbody>
                {% for step in steps%}
                    <tr>
                        <td><a href="{{ path('step_edit', {'id': step.id}) }}">{{ step.number }}</a></td>
                        <td><a href="{{ path('step_edit', {'id': step.id}) }}">{{ step.name }}</a></td>
                        <td><a href="{{ path('step_edit', {'id': step.id}) }}">{{ step.stepDefault ? "OUI" : "" }}</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun statut n'est défini</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}