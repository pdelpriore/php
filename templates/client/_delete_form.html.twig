<form method="post" action="{{ path('client_delete', {'id': client.id}) }}" onsubmit="return confirm('Merci de confirmer la suppression du client {{ client.name }}.');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    <button class="btn btn-block btn-sm btn-danger">Supprimer</button>
</form>