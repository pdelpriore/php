<form method="post" action="{{ path('certainty_level_delete', {'id': certainty_level.id}) }}" onsubmit="return confirm('Merci de confirmer la suppression du niveau de certitude {{ certainty_level.name }}.');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ certainty_level.id) }}">
    <button class="btn btn-block btn-sm btn-danger">Supprimer</button>
</form>