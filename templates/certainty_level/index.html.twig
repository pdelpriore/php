{% extends 'base.html.twig' %}
{% block title %}{{ titleConfiguration }}{% endblock %}

{% block body %}
    <div class="container panel-group">
        <div class="row col-md-12panel panel-heading">
            <div class="row col-md-12 text-center">
                <h2 class="">{{ titleCertaintyLevel }}</h2>
            </div>
            <div class="row col-md-2">
                <a href="{{ path('certainty_level_new') }}" class="btn btn-block btn-sm btn-success">Ajouter un niveau</a>
            </div>
        </div>
        <div class="row col-md-12 panel panel-body">
            <table id = "headerList" class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th>Pondération</th>
                    <th>Nom</th>
                </tr>
                </thead>
                <tbody>
                {% for certainty_level in certainty_levels%}
                    <tr>
                        <td><a href="{{ path('certainty_level_edit', {'id': certainty_level.id}) }}">{{ certainty_level.rate|number_format(2, ',', '.') }}</a></td>
                        <td><a href="{{ path('certainty_level_edit', {'id': certainty_level.id}) }}">{{ certainty_level.name}}</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun niveau de certitude défini</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}